{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@wilo": ["libs/wilo/src/index.ts"],
      "@indigo/layout": ["libs/layout/src/index.ts"],
      "@indigo/pipes": ["libs/pipes/src/index.ts"],
      "@indigo/directives": ["libs/directives/src/index.ts"],
      "@indigo/ui-elements": ["libs/ui-elements/src/index.ts"],
      "@indigo/utilities": ["libs/utilities/src/index.ts"],
      "@indigo/error-handler": ["libs/error-handler/src/index.ts"],
      "@indigo/dynamic-forms": ["libs/dynamic-forms/src/index.ts"],
      "@indigo/identity": ["libs/identity/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
